#include <iostream>
#include <vector>
#include <climits>
using namespace std;

Class TransportationSystem{
    
    //add crossroads and streets
    //adjacency matrix
    //Floyd-Warshall
    //dijkstra
}

int main() {
    int N, M;
    cout << "Enter the number of crossroads and streets: ";
    cin >> N >> M; // N-crossroads, M-streets

    TransportationSystem city(N);

    cout << "Enter the streets from u crossroad to v and give the time k (u v k):" << endl;
    for (int i = 0; i < M; ++i) {
        int u, v, k;
        cin >> u >> v >> k;
        city.addStreet(u, v, k); //+- такая функция должна быть
    }

    city.floydWarshall(); //зовем алгоритм
    city.dijkstra(); //зовем алгоритм

    return 0;
}

